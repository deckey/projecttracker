<html t:type="layout" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd">
    <body>
        <div class="container">
            <t:header/>
            <t:mainmenu/>
            <div class="row">
                <t:form class="col-sm-10 form-inline" t:id="projectSelectForm">
                    <label for="projectSelector">
                        Project details:
                    </label>
                    <div class="form-group ">
                        <select t:type="select"
                                t:id="projectSelector" 
                                t:model="projects" 
                                t:value="project"
                                blankLabel="Select project..."/>
                        <t:submit class="btn btn-default" value="Select"/>
                        <input t:type="pagelink" t:page="edit/EditProject" context="project" class="btn btn-primary">Edit project</input>
                        <!--TEST IF ADMIN AND DISABLE TIME LOGGING-->
                        <t:if test="loggedInRole">
                            <input type="submit" class="btn btn-warning right10" value="Log time"/>
                        </t:if>
                    </div>
                </t:form>
                <div class="col-sm-2 pull-right text-right ">
                    <h3>ID: 000-${project.projectId}</h3>
                </div>
            </div>
            <div class="row border_btm "/>
            <div class="row">
                <div class="col-sm-9 ">
                    <div class="row">
                        <div class="col-sm-6">
                            <h4>
                                <small>Project title:</small>
                            </h4>
                            <h4>${project.projectTitle}</h4>
                        </div>
                        <div class="col-sm-6">
                            <h4>
                                <small>Client:</small>
                            </h4>
                            <h4>${project.projectClient}</h4>
                        </div>
                    </div>
                    <div class="row desc-box">
                        <h4>
                            <small>Description:</small>
                        </h4>
                        <h4>
                            <i>${project.projectDescription}</i>
                        </h4>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="row">
                        <h4>
                            <small>Start date:</small>
                        </h4>
                        <h4>${project.projectStart}</h4>
                    </div>
                    <div class="row">
                        <h4>
                            <small>Due date:</small>
                        </h4>
                        <h4>${project.projectDue}</h4>
                    </div>
                    <div class="row">
                        <h4>
                            <small>Category:</small>
                        </h4>
                        <h4>${project.projectCategory}</h4>
                    </div>
                    <div class="row">
                        <h4>
                            <small>Status:</small>
                        </h4>
                        <h4>${project.projectStatus}</h4>
                    </div>
                </div>
            </div>
            <div class="row border_btm"/>
            <div class="row">
                <div class="col-sm-9">
                    <div class="row border_btm">
                        <h4>[table grid of assigned members here]</h4>
                    </div>
                </div>
                <div class="col-sm-3">
                    
                </div>
            </div>
        </div>
    </body>
</html>