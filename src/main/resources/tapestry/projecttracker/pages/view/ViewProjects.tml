<html t:type="layout" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd">
    <body>
        <div class="container">
            <t:header/>
            <t:mainmenu/>
            <div class="row">
                <div class="edit-icon">
                    <t:if test="loggedInRole">
                        <t:pagelink page="edit/EditProjects">
                            <img src="${context:images/glyphicons/edit.png}" alt="Edit projects" title="Edit projects"/>
                        </t:pagelink>
                    </t:if>
                </div>
                <div class="col-sm-2 ">
                    <h3> Projects </h3>
                </div>
            </div>
            <div class="row">
                <t:grid source="projects" exclude="projectId" rowsperpage="10" pagerPosition="bottom"/>
            </div>
        </div>
    </body>
</html>

