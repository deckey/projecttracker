<html t:type="layout" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd"
      xmlns:p="tapestry:parameter">
    <body>
        <div class="container">
            <t:header/>
            <t:mainmenu/>
            <div class="row">
                <h3> Edit members </h3>
                <div class="row">
                    <table t:type="grid" 
                           t:source="members" 
                           t:row="rowMember" 
                           exclude="memberPassword" 
                           t:add="action">
                        <p:actionCell>
                            <a t:type="eventlink" t:event="Delete" t:context="rowMember.memberId">Delete</a>
                            <a t:type="eventlink" t:event="Edit" context="rowMember">G-Edit</a>
                        </p:actionCell>
                        
                    </table>
                </div>
            </div>
            <hr/>
            <div class="row">
                <h3> Add / Edit member </h3>
                <t:beaneditform t:id="addMemberForm" 
                                t:object="rowMember"
                                exclude="memberId"
                                submitLabel="Add / Update"/>
            </div>
        </div>
    </body>
</html>