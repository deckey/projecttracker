<html t:type="layout" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd"
      xmlns:p="tapestry:parameter">
    <body>
        <div class="container">
            <t:header/>
            <t:mainmenu/>
            <div class="row border_btm">
                <h3> Add member: </h3>
            </div>
            <div class="spacer"/>
            <!--ADDING MEMBERS FORM-->
            <t:form t:id="addMemberForm">
                <t:errors/>
                
                <!--PROJECT TITLE, CLIENT AND DATES-->
                <div class="row">
                    <div class="form-group col-sm-3">
                        <label for="memberName">* Full name:</label>
                        <t:textfield t:id="memberName" t:value="memberName"/>
                    </div>
                    <div class="form-group col-sm-3 col-sm-offset-1">
                        <label for="memberUsername">* Username:</label>
                        <t:textfield t:id="memberUsername" t:value="memberUsername"/>
                    </div>
                    
                    <div class="form-group col-sm-2 col-sm-offset-1">
                        <label for="memberRole">Role:</label>
                        <t:select model="roles"  t:value="memberRole"/>
                    </div>
                    <div class="form-group col-sm-2">
                        <label for="memberSpecialty">Specialty:</label>
                        <t:select model="specialties"  t:value="memberSpecialty"/>
                    </div>
                </div>
                
                
                <!--PROJECT DESCRIPTION,  CATEGORY, PROJECT STATUS--> 
                <div class="row">
                    <div class="form-group col-sm-3">
                        <label for="memberStatus">Status:</label>
                        <t:select model="statuses" t:value="memberStatus"/>
                    </div>
                    <div class="form-group col-sm-3 col-sm-offset-1">
                        <label for="memberPassword">* Password:</label>
                        <t:textfield t:id="memberPassword" t:value="memberPassword"/>
                    </div>
                    <div class="col-sm-1 col-sm-offset-4">
                        <label for="addMemberBtn" class="invisible"/>
                        <t:submit t:id="addMemberBtn" class="btn btn-primary pull-right " value="Add member"/>
                    </div>
                </div>
                <div class="row spacer "/>
                <div class="row ">  
                    <h4> Members list: </h4>
                    <t:grid source="members" 
                            t:id="memberGrid"
                            model="membersGridModel"
                            class="table-grid"
                            rowsperpage="10"
                            row="member"
                            add="Action"
                            exclude="memberId, memberPassword">
                        <p:memberNameCell>
                            <t:pagelink t:page="view/ViewMemberDetails" class="table-link"
                                        t:context="member.memberId">${member.memberName}
                            </t:pagelink>
                        </p:memberNameCell>
                        <p:actionCell>
                            <t:pagelink t:page="view/ViewMemberDetails"
                                        t:context="member.memberId">
                                <img src="${context:images/glyphicons/edit.png}" width="20" title="Edit details of ${member.memberName}" />
                            </t:pagelink>
                            <t:actionlink t:mixins="confirm" 
                                          t:message="Delete item: ${member.memberName}?"
                                          t:id="deleteMember" 
                                          t:context="member.memberId">
                                <img src="${context:images/glyphicons/remove.png}" title="Delete ${member.memberName}?" class="glyph-icon"/>
                            </t:actionlink>
                        </p:actionCell>
                    </t:grid>
                </div>
            </t:form>
        </div>
    </body>
</html>