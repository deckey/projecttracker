<html t:type="layout" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd">
   
    <div class="container">
        <!-- MAIN MENU COMPONENT -->
        <t:if test="!loggedIn">
            <t:header/>
            <t:mainmenu/>
        </t:if>
        <!-- LOGIN FORM COMPONENT -->
        <t:if test="loggedIn">
            <div class="row">
                <div class="col-md-6 col-md-offset-6">
                    <t:form t:id="loginForm" class="clearfix" >
                        <t:errors/>
                        <div class="form-group col-sm-5">
                            <label t:type="label" for="memberUsername" class="control-label">Username:</label>
                            <input t:type="textfield" t:id="memberUsername" class="form-control" name="username" value="memberUsername"/>
                        </div>
                        <div class="form-group col-sm-5">
                            <label t:type="label" for="memberPassword" class="control-label">Password:</label>
                            <input t:type="passwordfield" t:id="memberPassword" class="form-control" name="password" value="memberPassword"/>
                        </div>
                        <div class="form-group col-sm-2">
                            <label class="invisible">Submit</label>
                            <t:submit class="btn btn-primary pull-right " value="Login"/>
                        </div>
                    </t:form>
                </div>
            </div>
        </t:if>
        <div class="jumbotron marg10">
            <img class="img-responsive" src="${context:images/projectTracker_logo.png}"/>
            <p>Quickly find what your employees are working on,
                add new projects and assignments 
                or even send invoices </p>
        </div>
            
        <div class="row">
            <div class="col-md-3">
                Team members: <strong>##</strong>
            </div>
            <div class="col-md-3">
                Active projects: <strong>##</strong>
            </div>
            <div class="col-md-6">
                Latest finished project: <strong>-----------</strong>
            </div>
        </div>
        <!--TEMPORARY FOR ADDING MEMBERS:-->
        <!--<t:beaneditform t:id="addMemberForm" object="member" exclude="memberId"/>-->
    </div>
</html>